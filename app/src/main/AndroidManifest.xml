<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.restaurant.management">

    <!-- Add internet permission -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".DashboardActivity"
            android:exported="false" />

        <activity
            android:name=".OpenSessionActivity"
            android:exported="false"
            android:parentActivityName=".DashboardActivity" />

        <activity
            android:name=".EndSessionActivity"
            android:exported="false"
            android:parentActivityName=".DashboardActivity" />

        <activity
            android:name=".OrderListActivity"
            android:label="@string/orders"
            android:parentActivityName=".DashboardActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".DashboardActivity" />
        </activity>

        <activity
            android:name=".OrderActivity"
            android:label="@string/order_details"
            android:parentActivityName=".OrderListActivity" />

        <activity
            android:name=".AddItemActivity"
            android:label="@string/add_item"
            android:parentActivityName=".OrderActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".OrderActivity" />
        </activity>

        <activity
            android:name=".PaymentActivity"
            android:label="@string/payment"
            android:parentActivityName=".OrderActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".OrderActivity" />
        </activity>

        <activity
            android:name=".TransactionActivity"
            android:label="@string/transactions"
            android:parentActivityName=".DashboardActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".DashboardActivity" />
        </activity>

        <activity
            android:name=".ReconciliationActivity"
            android:label="@string/title_activity_reconciliation"
            android:parentActivityName=".DashboardActivity" />

    </application>

</manifest>