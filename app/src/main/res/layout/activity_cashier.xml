<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FAFAFA">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#2196F3"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:elevation="4dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cashier Management"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#2196F3"
                    android:gravity="center"
                    android:layout_marginBottom="8dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginBottom="16dp" />

                <!-- Session Status -->
                <TextView
                    android:id="@+id/session_status_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Checking session status..."
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="8dp"
                    android:textColor="@android:color/black" />

                <!-- Current Balance -->
                <TextView
                    android:id="@+id/current_balance_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Current Balance: $0.00"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_marginBottom="16dp"
                    android:textColor="#4CAF50"
                    android:visibility="gone" />

                <!-- Loading Progress -->
                <ProgressBar
                    android:id="@+id/loading_progress_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="16dp"
                    android:visibility="gone" />

                <!-- Open/Close Session Button -->
                <Button
                    android:id="@+id/open_close_session_button"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Open Session"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:background="#2196F3"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="8dp" />

            </LinearLayout>

            <!-- Cashier Operations Card -->
            <LinearLayout
                android:id="@+id/cashier_operations_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:elevation="4dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cashier Operations"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#2196F3"
                    android:layout_marginBottom="16dp" />

                <!-- Withdraw Money Button -->
                <Button
                    android:id="@+id/withdraw_money_button"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="- Withdraw Money"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:background="#FF9800"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="12dp"
                    android:gravity="center" />

                <!-- Add Money Button -->
                <Button
                    android:id="@+id/add_money_button"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="+ Add Money"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:background="#4CAF50"
                    android:textColor="@android:color/white"
                    android:gravity="center" />

            </LinearLayout>

            <!-- Instructions Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:padding="16dp"
                android:elevation="4dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Instructions"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#2196F3"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Open/Close Session: Manage your cashier session start and end times\n• Withdraw Money: Remove cash from the drawer with a specified reason\n• Add Money: Add cash to the drawer with a specified reason\n\nNote: All transactions require a reason and will be logged for audit purposes."
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"
                    android:lineSpacingMultiplier="1.2" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>